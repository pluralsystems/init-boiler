{
  "compilerOptions": {
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2020",

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "checkJs": true,
    "allowJs": true,
    "noEmit": true,
    "noImplicitAny": false,

    "baseUrl": ".",
    "paths": {
      "@components": ["src/components/index.js"],
      "@components/*": ["src/components/*"],
      "@modules/*": ["src/modules/*"],
      "@layouts/*": ["src/views/layouts/*"],
      "@views/*": ["src/views/*"],
      "@routes/*": ["src/routes/*"],
      "@src/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
